<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Player ID</th>
        <th>Hero</th>
        <th>Kills</th>
        <th>Deaths</th>
        <th>Assists</th>
        <th>GPM</th>
        <th>XPM</th>
        <th>Last hits</th>
      </tr>
    </thead>
    <% @match.players.each do |p| %>
      <% if p.player_slot > 5 %>
        <tr>
          <td><%= p.id %></td>
          <td><%= image_tag("http://cdn.dota2.com/apps/dota2/images/heroes/#{p.hero}_sb.png") %></td>
          <td><%= p.kills %></td>
          <td><%= p.deaths %></td>
          <td><%= p.assists %></td>
          <td><%= p.gold_per_min %></td>
          <td><%= p.xp_per_min %></td>
          <td><%= p.last_hits %></td>
        </tr>
      <% end %>
    <% end %>
  </table>
</div>