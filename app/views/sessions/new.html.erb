<div class="container-fluid">
  <div class="h1 col-sm-offset-2 col-sm-10">
    Log in
  </div>
</div>

<%= form_tag '/login', class: "form-horizontal" do %>
  <div class="form-group">
    <label for="loginUsername" class="col-sm-2 control-label">Username:</label>
    <div class="col-sm-6">
      <%= text_field_tag :username, nil, id: "loginUsername", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="loginPassword" class="col-sm-2 control-label">Password:</label>
    <div class="col-sm-6">
      <%= password_field_tag :password, nil, id: "loginPassword", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <%= submit_tag 'login', class: "btn btn-default" %>
    </div>
  </div>
<% end %>
